<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:foregroundTint="@color/design_default_color_secondary">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shopping_list_image_view"
                android:layout_width="67dp"
                android:layout_height="82dp"
                android:layout_weight="1"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/shopping_list_product_name"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/product_name"
                android:padding="8dp"
                android:textAlignment="center"
                android:textColor="#C63406"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <CheckBox
                android:id="@+id/is_product_obtained"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:buttonTint="@color/black"
                android:enabled="false" />

            <ImageButton
                android:id="@+id/delete_from_slist"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/common_google_signin_btn_text_light_default"
                android:tint="@color/design_default_color_on_primary"
                app:srcCompat="@android:drawable/ic_menu_delete" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
